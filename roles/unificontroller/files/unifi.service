[Unit]
Description=unifi
Requires=network.target
After=network.target

[Service]
Restart=always
Type=forking
TimeoutSec=5min
KillMode=process
NotifyAccess=all
ExecStart=/opt/unifi/bin/unifi.init start
ExecStop=/opt/unifi/bin/unifi.init stop
ExecReload=/opt/unifi/bin/unifi.init reload

[Install]
WantedBy=multi-user.target
