[Unit]
Description=unifi
Requires=network.target
After=network.target

[Service]
Restart=always
Type=forking
TimeoutSec=5min
KillMode=process
NotifyAccess=all
ExecStart=java -jar /opt/UniFi/lib/ace.jar start
ExecStop=java -jar /opt/UniFi/lib/ace.jar stop
User=unifi
Group=unifi

[Install]
WantedBy=multi-user.target
